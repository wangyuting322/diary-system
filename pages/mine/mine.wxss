
.info-wrapper{
  background-color: white;
  box-shadow: 0px 2px 10px gray;
  padding: 10px;
  margin-bottom: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.info{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.avatar-parent {
  border-radius: 50%;
  overflow: hidden;
}

.avatar-image {
  width: 100px;
  height:100px;
}

.nickname {
  /* margin-left: 10rpx; */
  font-size: 36rpx;
  color: black;
}
.static-wrapper{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.static-single{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding:0px 20px;
  margin:10px 0px;
} 
.margin-both{
  border:1px solid gray;
  border-top:none;
  border-bottom:none;
}
.static-value{
  color:orange;
  font-size: 18px;
  font-weight: bold;
}